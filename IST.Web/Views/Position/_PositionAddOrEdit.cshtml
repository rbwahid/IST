@model  IST.Web.Models.PositionModel

@{
    ViewBag.Title = "Position";
}
@using (Html.BeginForm("Add", "Position", FormMethod.Post, new { @class = "form-horizontal", @id = "PositionCreateForm" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Add Or Edit</h5>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id, new { @id = "PositionId" })
            @Html.Hidden("InitialName", "undefined")
            <div class="form-group row">
                @Html.LabelFor(model => model.ShortName, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.ShortName)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.PositionName, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.PositionName, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.PositionName)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.IsTicketProcess, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            @Html.EditorFor(model => model.IsTicketProcess, new { @type = "checkbox", @class = "form-check-input-styled input-sm", @Value = false })
                            @Html.ValidationMessageFor(model => model.IsTicketProcess)
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index","Position")" class="btn btn-danger btn-custom"><i class="fa fa-times-circle text-white"></i> Cancel</a>
                <button type="submit" class="btn  bg-teal btn-custom ml-3" id="submitButton"><i class="fa fa-save"></i> Save</button>
            </div>
        </div>
    </div>
}





