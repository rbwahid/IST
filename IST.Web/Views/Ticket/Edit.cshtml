@using IST.Common
@model IST.Web.Models.TicketModel

@{
    ViewBag.Title = "Ticket";
    int sl = 1;
    int rowCount = 0;
}

<!-- Content area -->
<div class="content">

    <!-- Basic layout-->
    <div class="card border-teal">
        <div class="card-header bg-teal header-elements-inline">
            <h3 class="card-title"><strong>Ticket</strong></h3>
            <div class="header-elements">
                <div class="list-icons">
                    @*<a class="list-icons-item"><i class="icon-plus3"></i></a>*@
                </div>
            </div>
        </div>
        <hr class="hr-mar-reduce" />
        @using (Html.BeginForm("Edit", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data", @id = "ticketEditForm", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true);
            @Html.Hidden("InitialName", "undefined")
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">@Html.DisplayNameFor(model => model.CompanyProjectId)</label>
                            <div class="col-lg-6">
                                @*@Html.DropDownListFor(model => model.CompanyProjectId,new SelectList(Model.CompanyProjectList,"Id","Name"), "---Select---", new { @class = "form-control input-sm" })
                                    @Html.ValidationMessageFor(model => model.CompanyProjectId)*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">@Html.DisplayNameFor(model => model.Description)</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-sm", @placeholder = "Description" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">@Html.DisplayNameFor(model => model.IssueName)</label>
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.IssueName, new { @class = "form-control input-sm", @placeholder = "Issue Name" })
                                @Html.ValidationMessageFor(model => model.IssueName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">@Html.DisplayNameFor(model => model.Priority)</label>
                            <div class="col-md-6">
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        @Html.EditorFor(model => model.Priority, new { @type = "checkbox", @class = "form-check-input-styled input-sm", @Value = false })
                                        @Html.ValidationMessageFor(model => model.Priority)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @* Attachments *@
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="sectionLedgend">Attachments</h4>
                    </div>
                    <div class="col-md-6">
                        @{Html.RenderPartial("~/Views/Shared/_AttachmentFilePartial.cshtml");}
                    </div>
                    @* Attachment Collection *@
                    <div class="col-md-6">
                        <table class="table table-bordered table-striped table-condensed" id="attachFileCollectionTable">
                            <thead>
                                <tr>
                                    <th class="serial">#</th>
                                    <th>@Html.DisplayName("File Name")</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="attachFileCollectionTBody">
                                @if (Model.AttachmentFileCollection.Any())
                                {
                                    foreach (var item in Model.AttachmentFileCollection)
                                    {
                                        <tr>
                                            <td class="serial">
                                               @(sl++)
                                            </td>
                                            <td>
                                                <a class="title" target="_blank" href='@Url.Content(String.Format("~{0}", item.FileLocation))'>
                                                    <img height="25" src="@Url.Content(String.Format("~{0}", FileExtension.GetFileExtensionThumbnail(item.FileExtension)))" />  @item.OriginalName
                                                </a>
                                            </td>
                                            <td width="5%">
                                                <span onclick="removeAttachmentFromList('@item.Id',this)" class="btn btn-xxs text-danger"><i class="fa fa-times"></i></span>
                                            </td>
                                        </tr>
                                        rowCount++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-muted">No files found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Ticket")" class="btn btn-danger btn-custom"><i class="fa fa-times-circle text-white"></i> Cancel</a>
                    <button type="button" class="btn bg-teal btn-custom ml-3" onclick="formSumbit()"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
        }
    </div>
    <!-- /basic layout -->

</div>
<!-- /content area -->

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function formSumbit() {
            rearrangeNameSuffix("#attachmentFileTBody");
             $("#ticketEditForm").submit();
        }
        // attachment file remove //
        function removeAttachmentFromList(fileId, obj) {
            var confirmAns = confirm('Are you sure remove this attachment file?');
            if (confirmAns == true) {
                var paramdata = { fileId: fileId };
                var url = '@Url.Action("RemoveAttachmentFileFromDbById", "Ticket")';
                $.ajax({
                    url: url,
                    type: "POST",
                    data: JSON.stringify(paramdata),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $(obj).parent('td').parent('tr').remove();
                        serialRearrange();
                    }
                });
            }
        }
        function serialRearrange() {
            var row = 1;
            $("#attachFileCollectionTBody").find('tr').each(function () {
                $(this).find('[class="serial"]').text(row);
                row++;
            });
        }
    </script>
}