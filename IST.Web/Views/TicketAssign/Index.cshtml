@using System.Collections
@using IST.Web.Models
@model IEnumerable<IST.Entities.TicketAssign>

@{
    ViewBag.Title = "TicketAssign";
    var sl = 1;
}


<div class="content">
    <div class="card border-teal">
        <div class="card-header bg-teal header-elements-inline">
            <h3 class="card-title"><strong>Ticket Assign</strong></h3>
            <div class="header-elements">
                <div class="list-icons">
                    @*<a href="#" class="list-icons-item text-primary-600"><i class="icon-plus3"></i></a>*@
                </div>
            </div>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th class="serial">#</th>
                                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                                    <th>@Html.DisplayNameFor(model => model.TicketId)</th>
                                    <th>@Html.DisplayNameFor(model => model.UserId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Remarks)</th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="serial">@(sl++)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ticket.IssueName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Remarks)</td>

                                    <td>
                                        <div class="list-icons">
                                            <a href="#" class="list-icons-item text-primary-600" onclick="getDataForEdit('@item.Id')"><i class="icon-pencil7"></i></a>
                                            <a href="#" onclick="delete_Data('@item.Id')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    @{TicketAssignModel TicketAssignModel = new TicketAssignModel();}
                    @Html.Partial("~/Views/TicketAssign/_TicketAssignAddOrEdit.cshtml", TicketAssignModel)
                </div>
               
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajax-call")
    @Scripts.Render("~/bundles/theme-uniform")

    <script>
        function delete_Data(id) {
                var url = '@Url.Action("Delete", "TicketAssign")';
                var paramData = { id: id };
                delete_confirm(url, paramData);
            }
        function getDataForEdit(id) {
            var url = '@Url.Action("GetTicketAssignDetailsById", "TicketAssign")';
            var paramData = { id: id };
            ajaxCall(url, paramData, "renderTicketAssignEntryLoad");
        }
        function renderTicketAssignEntryLoad(data) {
            var editUrl = '@Url.Action("Edit", "TicketAssign")';
            $('#TicketAssignCreateForm').attr('action', editUrl);
            $("#TicketAssignId").val(data.Id);
            
            $("#Code").val(data.Code);           
            $("#Description").val(data.Description);
            $("#Status").val(data.Status);
            $("#Remarks").val(data.Remarks);
            $("#TicketId").val(data.TicketId);
            if (data.TicketId == 0 || data.TicketId == null) {
                $('#TicketId option[value=""]').prop("selected", true);
            } else {
                $('#TicketId option[value=' + data.CompanyId + ']').prop("selected", true);
            }
            $('')
           
            $("#submitButton").html('<i class="fa fa-save"></i> Update');
        }
    </script>
}
