@*@model EIST.Web.Models.ProjectModel*@
@model EIST.Entities.Project

@{
    ViewBag.Title = "Project";
}

<!-- Content area -->
<div class="container">
    <form class="form-horizontal">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label text-left " })
                    <div class="col-lg-6">
                        <label class="data-label control-label">  @Html.DisplayFor(model => model.Name) </label>
                    </div>
                </div>
                <div class="form-group row ">
                    @Html.LabelFor(model => model.CompanyId, new { @class = "col-sm-3 control-label text-left " })
                    <div class="col-lg-6">
                        <label class="data-label control-label">  @Html.DisplayFor(model => model.Company.Name) </label>
                    </div>
                </div>


                <div class="form-group row">
                    @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label text-left " })
                    <div class="col-lg-6">
                        <label class="data-label control-label">  @Html.DisplayFor(model => model.Description) </label>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row ">
                    @Html.LabelFor(model => model.SuperVisorId, new { @class = "col-sm-4 control-label text-left " })
                    <div class="col-lg-6">
                        <label class="data-label control-label">  @Html.DisplayFor(model => model.SuperVisor.UserName) </label>
                    </div>
                </div>
                <div class="form-group row ">
                    @Html.LabelFor(model => model.PmId, new { @class = "col-sm-4 control-label text-left" })
                    <div class="col-lg-6">
                        <label class="data-label control-label">  @Html.DisplayFor(model => model.ProjectManager.UserName) </label>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.Label("Customer User", new { @class = "col-sm-4 control-label text-left " })
                    <div class="col-lg-6">
                        @{
                            int num = 1;
                            foreach (var user in Model.CustomerUserProjectCollections)
                            {
                                <label class="data-label control-label text-right"> @num.&nbsp;  @Html.DisplayFor(model => user.CustomerUser.UserName) </label>
                                num++;
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- /content area -->

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ckeditor")

    <script src="~/Scripts/select2.min.js"></script>
    <script type="text/javascript">
        $(".select2").select2();


    </script>

}
