@model  EIST.Web.Models.ProjectModel

@{
    ViewBag.Title = "CompanyProject";
}
@using (Html.BeginForm("Add", "Project", FormMethod.Post, new { @class = "form-horizontal", @id = "CompanyProjectCreateForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Add Or Edit</h5>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">

            @Html.HiddenFor(model => model.Id, new { @id = "CompanyProjectId" })
            @Html.Hidden("InitialName", "undefined")
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Description, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.CompanyId, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.CompanyId, new SelectList(Model.companyList, "Id", "Name"), "--Choose--", new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.CompanyId)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.PmId, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.PmId, new SelectList(Model.projectMangaerList, "Id", "UserName"), "--Choose--", new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.PmId)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.SuperVisorId, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.SuperVisorId, new SelectList(Model.projectMangaerList, "Id", "UserName"), "--Choose--", new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.SuperVisorId)
                </div>
            </div>


        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index","Project")" class="btn btn-danger btn-custom"><i class="fa fa-times-circle text-white"></i> Cancel</a>
                <button type="submit" class="btn  bg-teal btn-custom ml-3" id="submitButton"><i class="fa fa-save"></i> Save</button>
            </div>
        </div>
        </div>
   
}





