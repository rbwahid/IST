@using System.Collections
@using EIST.Web.Models
@model IEnumerable<EIST.Entities.Project>

@{
    ViewBag.Title = "CompanyProject";
    var sl = 1;
}


<div class="content">
    <div class="card border-teal">
        <div class="card-header bg-teal header-elements-inline">
            <h3 class="card-title"><strong>Company Project</strong></h3>
            <div class="header-elements">
                <div class="list-icons">
                    @*<a href="#" class="list-icons-item text-primary-600"><i class="icon-plus3"></i></a>*@
                </div>
            </div>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th class="serial">#</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyId)</th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="serial">@(sl++)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Company.Name)</td>


                                        <td>
                                            <div class="list-icons">
                                                <a href="#" class="list-icons-item text-primary-600" onclick="getDataForEdit('@item.Id')"><i class="icon-pencil7"></i></a>
                                                <a href="#" onclick="delete_Data('@item.Id')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    @{ProjectModel CompanyProjectModel = new ProjectModel();}
                    @Html.Partial("~/Views/Project/_CompanyProjectAddOrEdit.cshtml", CompanyProjectModel)
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajax-call")


    <script>
       
        function delete_Data(id) {
                var url = '@Url.Action("Delete", "CompanyProject")';
                var paramData = { id: id };
                delete_confirm(url, paramData);
            }
        function getDataForEdit(id) {
            var url = '@Url.Action("GetCompanyProjectDetailsById", "Project")';
            var paramData = { id: id };
            ajaxCall(url, paramData, "renderCompanyProjectEntryLoad");
        }
        function renderCompanyProjectEntryLoad(data) {
            var editUrl = '@Url.Action("Edit", "Project")';
            $('#CompanyProjectCreateForm').attr('action', editUrl);
            $("#CompanyProjectId").val(data.Id);
            $("#InitialName").val(data.Name);
            $("#Name").val(data.Name);           
            $("#Description").val(data.Description);
            $("#CompanyId").val(data.CompanyId);
            if (data.CompanyId == 0 || data.CompanyId == null) {
                $('#CompanyId option[value=""]').prop("selected", true);
            } else {
                $('#CompanyId option[value=' + data.CompanyId + ']').prop("selected", true);
            }
           
            $("#submitButton").html('<i class="fa fa-save"></i> Update');
        }
    </script>
}
