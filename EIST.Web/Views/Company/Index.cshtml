@using System.Collections
@using EIST.Web.Models
@model IEnumerable<EIST.Entities.Company>

@{
    ViewBag.Title = "Company";
    var sl = 1;
}


<div class="content">
    <div class="card border-teal">
        <div class="card-header bg-teal header-elements-inline">
            <h3 class="card-title"><strong>Company</strong></h3>
            <div class="header-elements">
                <div class="list-icons">
                    @*<a href="#" class="list-icons-item text-primary-600"><i class="icon-plus3"></i></a>*@
                </div>
            </div>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th class="serial">#</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.MobileNo)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="serial">@(sl++)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MobileNo)</td>
                                        
                                        <td>
                                            <div class="list-icons">
                                                <a href="#" class="list-icons-item text-primary-600" onclick="getDataForEdit('@item.Id')"><i class="icon-pencil7"></i></a>
                                                <a href="#" onclick="delete_Data('@item.Id')" class="list-icons-item text-danger-600"><i class="icon-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    @{CompanyModel CompanyModel = new CompanyModel();}
                    @Html.Partial("~/Views/Company/_CompanyAddOrEdit.cshtml", CompanyModel)
                </div>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajax-call")
    @*@Scripts.Render("~/bundles/theme-uniform")*@

    <script>
        function delete_Data(id) {
                var url = '@Url.Action("Delete", "Company")';
                var paramData = { id: id };
                delete_confirm(url, paramData);
            }
        function getDataForEdit(id) {
            var url = '@Url.Action("GetCompanyDetailsById", "Company")';
            var paramData = { id: id };
            ajaxCall(url, paramData, "renderCompanyEntryLoad");
        }
        function renderCompanyEntryLoad(data) {
            var editUrl = '@Url.Action("Edit", "Company")';
            $('#CompanyCreateForm').attr('action', editUrl);
            $("#CompanyId").val(data.Id);
            $("#InitialName").val(data.Name);
            $("#Name").val(data.Name);           
            $("#Address").val(data.Address);
            $("#Phone").val(data.Phone);
            $("#Email").val(data.Email);
            $("#MobileNo").val(data.MobileNo);
           
            $("#submitButton").html('<i class="fa fa-save"></i> Update');
        }
    </script>
}
