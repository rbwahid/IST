@model  EIST.Web.Models.IssueLabelModel

@{
    ViewBag.Title = "IssueLabel";
}
@using (Html.BeginForm("Add", "IssueLabel", FormMethod.Post, new { @class = "form-horizontal", @id = "IssueLabelCreateForm" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Add Or Edit</h5>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">
            @*@Html.ValidationSummary(true)*@
            @Html.HiddenFor(model => model.Id, new { @id = "IssueLabelId" })
            @Html.Hidden("InitialLabelTitle", "undefined")
            <div class="form-group row">
                @Html.LabelFor(model => model.LabelTitle, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.LabelTitle, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.LabelTitle)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.ColorCode, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.ColorCode, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.ColorCode)
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index","IssueLabel")" class="btn btn-danger btn-custom"><i class="fa fa-times-circle text-white"></i> Cancel</a>
                <button type="submit" class="btn  bg-teal btn-custom ml-3" id="submitButton"><i class="fa fa-save"></i> Save</button>
            </div>
        </div>
    </div>
}






